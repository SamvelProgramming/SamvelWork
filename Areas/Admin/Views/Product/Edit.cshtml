@model AramatBags.Models.Product
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit Product";
}
<link href="~/css/products.css" rel="stylesheet" />
<div class="form-container">
    <h2>Edit Product</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label>Name</label>
            <input asp-for="ProductName" class="form-control-custom" />
        </div>

        <div class="form-group">
            <label>Description</label>
            <textarea asp-for="Description" class="form-control-custom"></textarea>
        </div>

        <div class="form-group">
            <label>Price</label>
            <input asp-for="Price" type="number" class="form-control-custom" />
        </div>

        <button type="submit" class="btn-primary-custom">
            <i class="fas fa-save"></i> Update
        </button>
        <a asp-action="Index" class="btn-secondary-custom">Cancel</a>
    </form>
</div>