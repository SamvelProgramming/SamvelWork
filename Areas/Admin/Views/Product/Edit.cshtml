@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AramatBags.Models.Product;
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Edit Product";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product Form</title>
    <link href="~/css/products.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container">
        <h1>Add New Product</h1>
        <form method="post" asp-action="Edit" id="product-form" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Image" for="product-image">Product Image</label>
                <div class="image-upload" id="image-upload-area">
                    <i class="fas fa-cloud-upload-alt"></i>
                    <p>Click to upload product image</p>
                    <img id="preview-image" class="preview-image" alt="Preview">
                    <input name="photo" asp-for="Image" type="file" id="product-image">
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ProductName" for="product-name">Product Name</label>
                <input name="ProductName" asp-for="ProductName" type="text" id="product-name" placeholder="Enter product name" required>
            </div>

            <div class="form-group">
                <label asp-for="Description" for="product-description">Description</label>
                <textarea name="Description" asp-for="Description" id="product-description" placeholder="Enter product description" required></textarea>
            </div>

            <div class="form-group">
                <label asp-for="Price" for="product-price">Price ($)</label>
                <input name="Price" value="@Model.Price" asp-for="Price" type="number" id="product-price" placeholder="Enter price" min="0" step="0.01" required>
            </div>

            <div class="form-group">
                <label asp-for="ProductCategoryId" for="product-category">Category</label>
                <select name="ProductCategoryId" asp-for="ProductCategoryId" id="product-category">
                    @if (ViewBag.Categories != null)
                    {
                        @foreach (var j in ViewBag.Categories)
                        {
                            <option>@j.CategoryName</option>
                        }
                    }
                    else
                    {
                        <option>No category(Add one)</option>
                    }

                </select>
            </div>

            <div class="form-group">
                <label asp-for="ProductCount" for="product-count">Product Count (Inventory)</label>
                <input asp-for="ProductCount" type="number" id="product-count" placeholder="Enter available quantity" min="0" required>
            </div>

            <button type="submit" class="btn-submit">Edit Product</button>
        </form>
    </div>

</body>
</html>