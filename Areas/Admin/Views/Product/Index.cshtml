@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<AramatBags.Models.Product>;
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Product Index";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Shop - Product Cards</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="~/css/dashboard.css" rel="stylesheet" />
</head>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Shop - Product Cards</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="~/css/dashboard.css" rel="stylesheet" />
</head>
<body>
    <a href="@Url.Action("Add", "Product")" style="float:right;display: inline-block; margin-bottom: 20px; padding: 10px 15px; background-color: blue; color: white; text-decoration: none; border-radius: 4px; transition: background-color 0.3s; box-sizing: border-box;">
        <i class="fas fa-plus"></i> Add Product
    </a>


    <div style="display:flex;flex-direction:row; flex-wrap: wrap; padding: 20px;">
        @foreach (var i in ViewBag.products)
        {
            <div style="position:relative;margin-top:-600px;padding: 20px; border: 1px solid #ccc; border-radius: 15px;  text-align: center;border:none">
                <div>
                    <img src="~/Images/Product/@i.Image"
                         style="border-radius: 20px; width: 180px; height: 240px; object-fit: cover;" />
                </div>

                <h2 style="display:inline-block;color: #224531; font-size: 1.1rem; margin: 10px 0 5px 0;"><b>$@i.Price</b></h2>
                <h3 style="display:inline-block;color: #224531; font-size: 1rem; margin-bottom: 15px;"><b>@i.ProductName</b></h3>

                <!-- Action Buttons (Edit/Delete) -->
                <div style="display: flex; flex-direction: column; gap: 10px;">
                    <form asp-action="Delete" asp-controller="Product" method="post" style="margin: 0;">
                        <input type="hidden" name="id" value="@i.Id" />
                        <button type="submit" onclick="message()"
                                style="padding: 8px 10px; border-radius: 6px; font-size: 0.9rem; cursor: pointer; transition: 0.2s; background-color: #662525; color: white; border: none;"
                                onmouseover="this.style.backgroundColor='#4e1c1c';"
                                onmouseout="this.style.backgroundColor='#662525';">
                            <i class="fas fa-trash" style="margin-right: 6px;"></i> Delete
                        </button>
                    </form>
                    <a href="@Url.Action("Edit", "Product", new { Id = i.Id })"
                       style="display: inline-block; padding: 8px 10px; border-radius: 6px; text-decoration: none; font-size: 0.9rem; cursor: pointer; transition: 0.2s; background-color: #9BB5A7; color: white; border: none;"
                       onmouseover="this.style.backgroundColor='#889e91';"
                       onmouseout="this.style.backgroundColor='#9BB5A7';">
                        <i class="fas fa-edit" style="margin-right: 6px;"></i> Edit
                    </a>
                </div>
            </div>
        }
    </div>



    </div>
    </div>

    <script>
        function message() {
            confirm("Are you sure you want to delete this product?");
        }
    </script>
</body>
</html>

</html>