@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AramatBags.Models.ProductCategory;
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Edit Category";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product Form</title>
    <link href="~/css/products.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container">
        <h1>Add New Product</h1>
        <form method="post" asp-action="Edit" id="product-form" enctype="multipart/form-data">
            <input type="hidden" asp-for="CategoryId">

            <div class="form-group">
                <label asp-for="Image" for="product-image">Product Image</label>
                <div class="image-upload" id="image-upload-area">
                    <i class="fas fa-cloud-upload-alt"></i>
                    <p>Click to upload product image</p>
                    <img id="preview-image" class="preview-image" alt="Preview">
                    <input name="photo" asp-for="Image" type="file" id="product-image">
                </div>
            </div>

            <div class="form-group">
                <label asp-for="CategoryName" for="product-name">Category Name</label>
                <input name="CategoryName" asp-for="CategoryName" type="text" id="product-name" placeholder="Enter product name" required>
            </div>

            <div class="form-group">
                <label asp-for="CategoryDescription" for="product-description">Description</label>
                <textarea name="CategoryDescription" asp-for="CategoryDescription" id="product-description" placeholder="Enter product description" required></textarea>
            </div>
            <button type="submit" class="btn-submit">Edit Category</button>
        </form>
    </div>

</body>
</html>