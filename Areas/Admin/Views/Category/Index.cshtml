@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<AramatBags.Models.ProductCategory>;
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Dashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Shop - Product Cards</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="~/css/dashboard.css" rel="stylesheet" />
</head>
<body>

    <script>
        function message() {
            confirm("Are you sure you want to delete this product?");
        }
    </script>
</body>
</html>
<div class="container">
    <div style="max-width: 1200px; margin: 0 auto; padding: 20px;">
        <div style="text-align: center; margin-bottom: 30px; padding: 20px 0;">
        </div>
        <a href="@Url.Action("Add", "Category", new { area = "admin" })" class="add-product-link" style="margin-left:500px;float:right;display: inline-block; margin-bottom: 20px; padding: 10px 15px; background-color: #4CAF50; color: white; text-decoration: none; border-radius: 4px; transition: background-color 0.3s;border:none">
            <i class="fas fa-plus"></i> Add Product Category
        </a>
        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 20px; padding: 10px;">
            @foreach (var i in ViewBag.GetAll)
            {
                <div style="margin-left:200px;width:100%;background: #fff; border-radius: 20px; overflow: hidden; box-shadow: 0 8px 20px rgba(0,0,0,0.08); transition: transform 0.3s ease; padding: 0;  margin-bottom: 30px;">

                    <!-- Image -->
                    <div style="width: 100%; height: 220px; background: #f4f4f4; display: flex; align-items: center; justify-content: center; overflow: hidden;">
                        <img src="~/Images/Category/@i.Image"
                             style="max-width: 100%; max-height: 100%; object-fit: contain; transition: transform 0.3s ease;" />
                    </div>

                    <!-- Content -->
                    <div style="padding: 20px; text-align: center;">

                        <!-- Category name -->
                        <div style="font-size: 1.3rem; font-weight: 700; color: #224531; margin-bottom: 10px;">
                            @i.CategoryName

                        </div>
                        <h6>@i.CategoryDescription</h6>

                        <!-- Buttons -->
                        <div style="display: flex; justify-content: center; gap: 12px; flex-wrap: wrap;">

                            <!-- Delete -->
                            <form asp-area="Admin" asp-action="Delete" asp-controller="Category" method="post" style="margin: 0;">
                                <input type="hidden" name="id" value="@i.CategoryId" />
                                <button type="submit" onclick="message()"
                                        style="padding: 10px 20px; border-radius: 10px; font-size: 0.95rem; background-color: #662525; color: white; border: none; cursor: pointer; transition: background-color 0.2s;"
                                        onmouseover="this.style.backgroundColor='#4e1c1c';"
                                        onmouseout="this.style.backgroundColor='#662525';">
                                    <i class="fas fa-trash" style="margin-right: 6px;"></i> Delete
                                </button>
                            </form>

                            <!-- Edit -->
                            <form asp-area="Admin" asp-action="Edit" asp-controller="Category" method="post" style="margin: 0;">
                                <input type="hidden" name="id" value="@i.CategoryId" />
                                <a href="@Url.Action("Edit", "Category", new { area = "admin", Id = i.CategoryId })"
                                   style="padding: 10px 20px; border-radius: 10px; font-size: 0.95rem; background-color: #9BB5A7; color: white; text-decoration: none; display: inline-block; cursor: pointer; transition: background-color 0.2s;"
                                   onmouseover="this.style.backgroundColor='#889e91';"
                                   onmouseout="this.style.backgroundColor='#9BB5A7';">
                                    <i class="fas fa-edit" style="margin-right: 6px;"></i> Edit
                                </a>
                            </form>

                        </div>
                    </div>
                </div>
            }



        </div>
    </div>
</div>