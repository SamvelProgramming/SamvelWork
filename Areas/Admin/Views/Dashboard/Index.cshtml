@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <!-- Stats Cards -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card primary">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-xs font-weight-bold text-uppercase">Total Users</div>
                        <div class="h5 font-weight-bold">@ViewBag.TotalUsers</div>
                    </div>
                    <i class="fas fa-users fa-2x text-icon"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card success">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-xs font-weight-bold text-uppercase">Total Products</div>
                        <div class="h5 font-weight-bold">@ViewBag.TotalProducts</div>
                    </div>
                    <i class="fas fa-box fa-2x text-icon"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card info">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-xs font-weight-bold text-uppercase">Total Orders</div>
                        <div class="h5 font-weight-bold">@ViewBag.TotalOrders</div>
                    </div>
                    <i class="fas fa-shopping-cart fa-2x text-icon"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card warning">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-xs font-weight-bold text-uppercase">Revenue</div>
                        <div class="h5 font-weight-bold">
                            @(ViewBag.TotalRevenue?.ToString("N0")) ֏
                        </div>
                    </div>
                    <i class="fas fa-dollar-sign fa-2x text-icon"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row mb-4">
    <div class="col-xl-8 col-lg-7">
        <div class="card shadow mb-4">
            <div class="card-header"><h6>Monthly Sales Overview</h6></div>
            <div class="card-body">
                <canvas id="salesChart"></canvas>
            </div>
        </div>
    </div>

    <div class="col-xl-4 col-lg-5">
        <div class="card shadow mb-4">
            <div class="card-header"><h6>Top Categories</h6></div>
            <div class="card-body">
                <canvas id="categoryChart"></canvas>
                <div class="mt-3 text-center small">
                    <span class="mr-2"><i class="fas fa-circle text-primary"></i> Bags</span>
                    <span class="mr-2"><i class="fas fa-circle text-success"></i> Accessories</span>
                    <span class="mr-2"><i class="fas fa-circle text-info"></i> Wallets</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions and System Overview -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header"><h6>Quick Actions</h6></div>
            <div class="card-body d-flex gap-2 flex-wrap">
                <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Add Product</a>
                <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-success"><i class="fas fa-tags"></i> Add Category</a>
                <a asp-area="Admin" asp-controller="Order" asp-action="Index" class="btn btn-info"><i class="fas fa-list"></i> View Orders</a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header"><h6>System Overview</h6></div>
            <div class="card-body">
                <p><strong>Active Users:</strong> @ViewBag.ActiveUsers</p>
                <p><strong>Pending Orders:</strong> @ViewBag.PendingOrders</p>
                <p><strong>Low Stock Products:</strong> @ViewBag.LowStock</p>
            </div>
        </div>
    </div>
</div>

<!-- Recent Orders Table -->
<div class="card shadow mb-4">
    <div class="card-header"><h6>Recent Orders</h6></div>
    <div class="card-body table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer</th>
                    <th>Date</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.RecentOrders != null)
                {
                    foreach (var order in ViewBag.RecentOrders)
                    {
                        <tr>
                            <td>#@order.Id</td>
                            <td>@order.User?.UserName</td>
                            <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                            <td>@order.TotalAmount.ToString("N0") ֏</td>
                            <td>
                                <span class="badge @(order.Status == "Delivered" ? "badge-success" :
                                                                                          order.Status == "Pending" ? "badge-warning" :
                                                                                          order.Status == "Cancelled" ? "badge-danger" : "badge-info")">
                                    @order.Status
                                </span>
                            </td>
                            <td>
                                <a href="#" class="btn btn-sm btn-primary btn-circle"><i class="fas fa-eye"></i></a>
                                <a href="#" class="btn btn-sm btn-info btn-circle"><i class="fas fa-edit"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        // Sales Chart
        new Chart(document.getElementById('salesChart').getContext('2d'), {
            type: 'line',
            data: {
                labels: ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec'],
                datasets:[{
                    label:'Sales',
                    data:[0,350000,550000,720000,980000,1150000,1300000,1500000,1700000,1850000,1950000,2000000],
                    borderColor:'#4e73df',
                    backgroundColor:'rgba(78,115,223,0.05)',
                    tension:0.2,
                    fill:true,
                    pointRadius:3
                }]
            },
            options:{
                responsive:true,
                scales:{
                    y:{
                        beginAtZero:true,
                        max:2000000,
                        ticks:{
                            callback:function(value){
                                return value.toLocaleString() + ' ֏';
                            }
                        }
                    }
                }
            }
        });

        // Category Chart
        new Chart(document.getElementById('categoryChart').getContext('2d'), {
            type:'doughnut',
            data:{
                labels:['Bags','Accessories','Wallets'],
                datasets:[{
                    data:[55,25,20],
                    backgroundColor:['#4e73df','#1cc88a','#36b9cc'],
                    hoverBackgroundColor:['#2e59d9','#17a673','#2c9faf'],
                    hoverBorderColor:'rgba(234,236,244,1)'
                }]
            },
            options:{cutout:'70%',plugins:{legend:{display:false}}}
        });
    </script>
}