@{
    ViewData["Title"] = "Contact Us Page";
    Layout = "../Shared/_Layout.cshtml";

}
<!DOCTYPE html>
<html lang="en">

<head>
    <title>AramatBags - OnlineShop</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="author" content="TemplatesJungle">
    <meta name="keywords" content="ecommerce,fashion,store">
    <meta name="description" content="Bootstrap 5 Fashion Store HTML CSS Template">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&family=Marcellus&display=swap"
          rel="stylesheet">
    <link href="~/css/normalize.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/swiper-bundle.min.css" rel="stylesheet" />
    <link href="~/css/vendor.css" rel="stylesheet" />
</head>

<body class="homepage">
    <section class="container py-5" style="background: linear-gradient(120deg, #fef9f4, #fffdfa);">
        <div class="row justify-content-between">

            <!-- Contact Info -->
            <div class="col-md-5 mb-4">
                <h2 class="h2 text-uppercase" style="color: #2b2b2b;">Contact Information</h2>
                <p class="fs-6" style="color: #4a4a4a;">
                    Reach out for inquiries, support, or custom requests. Our team is ready to assist.
                </p>

                <div class="mb-3">
                    <h5 class="h5" style="color: #2b2b2b;">Address</h5>
                    <p style="color: #4a4a4a;">Usanoxakan 5, Vanadzor, Armenia</p>
                </div>

                <div class="mb-3">
                    <h5 class="h5" style="color: #2b2b2b;">Email</h5>
                    <p style="color: #4a4a4a;">aramatbags@gmail.com</p>
                </div>

                <div class="mb-3">
                    <h5 class="h5" style="color: #2b2b2b;">Phone</h5>
                    <p style="color: #4a4a4a;">+37477466433 or +37455477433</p>
                </div>
                <div class="link-div">
                    <a href="https://www.instagram.com/aramat_bags/"><img class="instagram-picture" src="~/images/instagram.png" /></a>
                    <a href="https://www.instagram.com/aramat_bags/"><img class="instagram-picture" src="~/images/facebook.png" /></a>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="col-md-6">
                <h2 class="h2 text-uppercase" style="color: #2b2b2b;">Send a Message</h2>

                <form class="form-card mt-4">
                    <div class="form-group mb-3">
                        <label for="name" style="color: #4a4a4a;">Your Name</label>
                        <input type="text" class="form-control" id="name" required
                               style="border-color: #cfc5b6; box-shadow: 0 0 6px rgba(0,0,0,0.05);">
                    </div>

                    <div class="form-group mb-3">
                        <label for="email" style="color: #4a4a4a;">Email Address</label>
                        <input type="email" class="form-control" id="email" required
                               style="border-color: #cfc5b6; box-shadow: 0 0 6px rgba(0,0,0,0.05);">
                    </div>

                    <div class="form-group mb-3">
                        <label for="message" style="color: #4a4a4a;">Your Message</label>
                        <textarea class="form-control" id="message" rows="6" required
                                  style="border-color: #cfc5b6; box-shadow: 0 0 6px rgba(0,0,0,0.05);"></textarea>
                    </div>

                    <button type="submit"
                            class="btn text-uppercase"
                            style="background-color: #bfa96f; color: #fff; font-weight: 500; padding: 0.8rem 1.5rem; transition: 0.3s;">
                        Send Message
                    </button>
                </form>
            </div>

        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/modernizr.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/script.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/smoothscroll.js"></script>
</body>

</html>