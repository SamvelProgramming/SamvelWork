@{
    ViewData["Title"] = "About Us Page";
    Layout = "../Shared/_Layout.cshtml";

}
<!DOCTYPE html>
<html lang="en">

<head>
    <title>AramatBags - OnlineShop</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="author" content="TemplatesJungle">
    <meta name="keywords" content="ecommerce,fashion,store">
    <meta name="description" content="Bootstrap 5 Fashion Store HTML CSS Template">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&family=Marcellus&display=swap"
          rel="stylesheet">
    <link href="~/css/normalize.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/swiper-bundle.min.css" rel="stylesheet" />
    <link href="~/css/vendor.css" rel="stylesheet" />
</head>

<body class="homepage">
    <!-- Page Header -->
    <section class="py-5 bg-light text-center">
        <div class="container">
            <h1 class="mb-3">About Aramat</h1>
            <p class="col-lg-6 mx-auto">
                We create timeless bags designed with elegance, precision,
                and modern minimalism. Aramat is where craftsmanship meets style.
            </p>
        </div>
    </section>

    <!-- Our Story -->
    <section class="py-5">
        <div class="container">
            <div class="row align-items-center g-5">

                <div class="col-md-6">
                    <img src="~/images/img_5256.heic" class="logo-aramat-img" alt="Aramat Workshop">
                </div>

                <div class="col-md-6">
                    <h2>Our Story</h2>
                    <p>
                        Aramat was founded with a simple vision — to create
                        bags that combine luxury and functionality.
                        Every piece reflects dedication, detail, and passion.
                    </p>
                    <p>
                        We believe simplicity is the ultimate sophistication.
                        That’s why our collections remain clean, refined,
                        and timeless.
                    </p>
                </div>

            </div>
        </div>
    </section>

    <!-- Our Values -->
    <section class="py-5 bg-light text-center">
        <div class="container">
            <h2 class="mb-5">Our Values</h2>

            <div class="row g-4">

                <div class="col-md-4">
                    <h4>Quality</h4>
                    <p>
                        We never compromise on materials or craftsmanship.
                        Excellence is our standard.
                    </p>
                </div>

                <div class="col-md-4">
                    <h4>Elegance</h4>
                    <p>
                        Minimal, timeless designs that stay stylish
                        across seasons.
                    </p>
                </div>

                <div class="col-md-4">
                    <h4>Integrity</h4>
                    <p>
                        Built with honesty, responsibility,
                        and attention to every detail.
                    </p>
                </div>

            </div>
        </div>
    </section>

    <!-- Call To Action -->
    <section class="py-5 text-center">
        <div class="container">
            <h2 class="mb-4">Discover Our Collection</h2>
            <a href="/Shop" class="btn btn-primary px-4">Shop Now</a>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/modernizr.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/script.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/smoothscroll.js"></script>
</body>
</html>